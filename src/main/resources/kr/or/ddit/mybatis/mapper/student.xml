<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="student">

	<!-- 전체 학생 정보 조회 -->	
	<select id="selectAllStudents" resultType="studentVo">
		select * 
			from student
	</select>
	
	<!-- id로 학생 정보 조회 -->
	<select id="getStudentId" parameterType="int" resultType="studentVo">
		select * 
			from student 
			where id = #{id}
	</select>
	
	<!-- studentVo로 학생 정보 조회 -->
	<select id="getStudentVo" parameterType="studentVo" resultType="studentVo">
		select * 
		 from student 
		 where id = #{id}
	</select>
	
	<!-- 학생 정보 페이징 조회 -->
	<select id="getStudentPageList" resultType="studentVo" parameterType="map">
		SELECT * 
		  FROM (SELECT a.*, ROWNUM rn
		        FROM (SELECT *
		              FROM student
		              ORDER BY name) a)
		  WHERE rn BETWEEN (#{page}-1)*#{pageSize}+1 AND #{page}*#{pageSize}
	</select>
	
	<!-- 전체 학생 수 조회 -->
	<select id="getStudentTotCnt" resultType="int">
		select count(*)
		 from student
	</select>
	
	<!-- 학생정보 업데이트 -->
	<update id="studentUpdate" parameterType="studentVo">
		UPDATE student 
		    SET pic=#{pic}
		      , picpath=#{picpath}
		      , picname=#{picname}
		      , addr1 = #{addr1}
		      , addr2 = #{addr2}
		      , zipcd = #{zipcd}
		      , name=#{name}
		    WHERE id=#{id}
	</update>
  
</mapper>